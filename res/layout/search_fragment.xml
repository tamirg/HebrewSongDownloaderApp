<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent">
    <Button
		  android:id="@+id/searchSongBtn"
		  style="?android:attr/buttonStyleSmall"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:text="חפש"
		  android:layout_alignTop="@+id/searchSongQuery"
		  android:layout_alignParentLeft="true"
		  />
    <SearchView
		  android:id="@+id/searchSongQuery"
		  android:layout_width="273dp"
		  android:layout_height="wrap_content"
		  android:inputType="text"
		  android:longClickable="false"
		  android:gravity="right"
		  android:textAlignment="gravity"
		  android:baselineAligned="false"
		  android:layout_gravity="right"
		  android:layout_alignParentTop="true"
		  android:layout_toRightOf="@+id/searchSongBtn"
		  android:layout_alignParentRight="true"/>
    <ProgressBar
		  android:id="@+id/progressBar"
		  style="?android:attr/progressBarStyleHorizontal"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_below="@+id/searchSongQuery"
		  android:layout_alignRight="@+id/searchSongQuery"
		  android:layout_alignParentLeft="true"/>
    <TextView
		  android:id="@+id/textShowingPercentage"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textAppearance="?android:attr/textAppearanceMedium"
		  android:layout_below="@+id/progressBar"
		  android:layout_alignParentLeft="true"
		  android:text=""
		  android:textColor="#3f8cff"/>
</LinearLayout>

