<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Dawnloader" parent="@android:style/Theme.Holo.Light">
	   <item name="android:actionBarItemBackground">@drawable/selectable_background_dawnloader</item>
	   <item name="android:popupMenuStyle">@style/PopupMenu.Dawnloader</item>
	   <item name="android:dropDownListViewStyle">@style/DropDownListView.Dawnloader</item>
	   <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Dawnloader</item>
	   <item name="android:actionDropDownStyle">@style/DropDownNav.Dawnloader</item>
	   <item name="android:actionBarStyle">@style/ActionBar.Solid.Dawnloader</item>
	   <item name="android:actionModeBackground">@drawable/cab_background_top_dawnloader</item>
	   <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_dawnloader</item>
	   <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Dawnloader</item>


    </style>

    <style name="ActionBar.Solid.Dawnloader" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
	   <item name="android:background">@drawable/ab_background_textured_dawnloader</item>
	   <item name="android:backgroundStacked">@drawable/ab_stacked_solid_dawnloader</item>
	   <item name="android:backgroundSplit">@drawable/ab_background_textured_dawnloader</item>
	   <item name="android:progressBarStyle">@style/ProgressBar.Dawnloader</item>
    </style>

    <style name="ActionBar.Transparent.Dawnloader" parent="@android:style/Widget.Holo.Light.ActionBar">
	   <item name="android:background">@drawable/ab_transparent_dawnloader</item>
	   <item name="android:progressBarStyle">@style/ProgressBar.Dawnloader</item>
    </style>

    <style name="PopupMenu.Dawnloader" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
	   <item name="android:popupBackground">@drawable/menu_dropdown_panel_dawnloader</item>
    </style>

    <style name="DropDownListView.Dawnloader" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
	   <item name="android:listSelector">@drawable/selectable_background_dawnloader</item>
    </style>

    <style name="ActionBarTabStyle.Dawnloader" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
	   <item name="android:background">@drawable/tab_indicator_ab_dawnloader</item>
    </style>

    <style name="DropDownNav.Dawnloader" parent="@android:style/Widget.Holo.Light.Spinner">
	   <item name="android:background">@drawable/spinner_background_ab_dawnloader</item>
	   <item name="android:popupBackground">@drawable/menu_dropdown_panel_dawnloader</item>
	   <item name="android:dropDownSelector">@drawable/selectable_background_dawnloader</item>
    </style>

    <style name="ProgressBar.Dawnloader" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
	   <item name="android:progressDrawable">@drawable/progress_horizontal_dawnloader</item>
    </style>

    <style name="ActionButton.CloseMode.Dawnloader" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
	   <item name="android:background">@drawable/btn_cab_done_dawnloader</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Dawnloader.Widget" parent="@android:style/Theme.Holo">
	   <item name="android:popupMenuStyle">@style/PopupMenu.Dawnloader</item>
	   <item name="android:dropDownListViewStyle">@style/DropDownListView.Dawnloader</item>
    </style>

</resources>